# ===========================================
# Lead-EZ Environment Configuration
# ===========================================

# -----------------
# Database Settings
# -----------------
DATABASE_URL=sqlite:///./database/leads.db
DATABASE_TYPE=sqlite

# -----------------
# API Settings
# -----------------
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change-this-to-a-secure-random-key
API_DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------
# MCP Server Settings
# -----------------
MCP_HOST=localhost
MCP_PORT=8001
MCP_LOG_LEVEL=INFO

# -----------------
# Email (SMTP) Settings
# -----------------
# For local testing with MailHog/MailDev:
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=demo@leadez.com
SMTP_ENABLED=false
SMTP_USE_TLS=false

# For Gmail (create App Password: https://myaccount.google.com/apppasswords):
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=your-email@gmail.com
# SMTP_ENABLED=true
# SMTP_USE_TLS=true

# For SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_FROM=verified-sender@yourdomain.com
# SMTP_ENABLED=true
# SMTP_USE_TLS=true

# For AWS SES:
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USER=your-aws-smtp-username
# SMTP_PASSWORD=your-aws-smtp-password
# SMTP_FROM=verified-sender@yourdomain.com
# SMTP_ENABLED=true
# SMTP_USE_TLS=true

# -----------------
# LLM Settings (Optional - for AI enrichment)
# -----------------
LLM_PROVIDER=ollama
LLM_MODEL=mistral
LLM_API_KEY=
LLM_BASE_URL=http://localhost:11434
OPENAI_API_KEY=

# -----------------
# LinkedIn Settings
# -----------------
LINKEDIN_DRY_RUN=true
LINKEDIN_SIMULATE=true

# -----------------
# Rate Limiting & Retry Settings
# -----------------
MAX_MESSAGES_PER_MINUTE=10
MAX_RETRIES=2
RETRY_DELAY_SECONDS=5

# -----------------
# Pipeline Settings
# -----------------
DRY_RUN=true
DEFAULT_LEAD_COUNT=200
RANDOM_SEED=42

# -----------------
# Logging
# -----------------
LOG_LEVEL=INFO
LOG_FILE=./storage/logs/leadez.log

# -----------------
# Frontend Settings
# -----------------
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# -----------------
# n8n Settings (if running n8n locally)
# -----------------
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
