# ===========================================
# Lead-EZ Environment Configuration
# ===========================================

# -----------------
# Database Settings
# -----------------
DATABASE_URL=sqlite:///./database/leads.db
DATABASE_TYPE=sqlite

# -----------------
# API Settings
# -----------------
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change-this-to-a-secure-random-key
API_DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------
# MCP Server Settings
# -----------------
MCP_HOST=localhost
MCP_PORT=8001
MCP_LOG_LEVEL=INFO

# -----------------
# Email (SMTP) Settings
# -----------------
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=demo@leadez.com
SMTP_USE_TLS=false

# -----------------
# LLM Settings (Optional - for AI enrichment)
# -----------------
LLM_PROVIDER=ollama
LLM_MODEL=mistral
LLM_API_KEY=
LLM_BASE_URL=http://localhost:11434
OPENAI_API_KEY=

# -----------------
# LinkedIn Settings
# -----------------
LINKEDIN_DRY_RUN=true
LINKEDIN_SIMULATE=true

# -----------------
# Rate Limiting & Retry Settings
# -----------------
MAX_MESSAGES_PER_MINUTE=10
MAX_RETRIES=2
RETRY_DELAY_SECONDS=5

# -----------------
# Pipeline Settings
# -----------------
DRY_RUN=true
DEFAULT_LEAD_COUNT=200
RANDOM_SEED=42

# -----------------
# Logging
# -----------------
LOG_LEVEL=INFO
LOG_FILE=./storage/logs/leadez.log

# -----------------
# Frontend Settings
# -----------------
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# -----------------
# n8n Settings (if running n8n locally)
# -----------------
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
